<h1>ログイン</h1>

<%= form_with(url: login_path, method: :post) do |f| %>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.submit 'ログイン' %>
  </div>
<% end %>

<% if flash[:alert] %>
  <div>
    <%= flash[:alert] %>
  </div>
<% end %>
