<%= form_with model: @user, url: profile_path, data: { turbo: false } do |f|  %>
      
       <% if @user.errors.any? %>
         <div class="bg-red-400 border border-red-800 text-red-700 px-4 py-2 rounded">
         <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
        </ul>
        </div>
        <% end %>

      <div class="my-4">
        <%= f.label :name, class: "block font-semibold" %>
        <%= f.text_field :name, class: "input w-full", required: true %>
      </div>

      <div class="my-4">
        <%= f.label :email, class: "block font-semibold" %>
        <%= f.email_field :email, class: "input w-full", required: true %>
      </div>

      <div class="my-4">
        <%= f.label :avatar, class: "block font-semibold" %>
        <div id="avatar_preview" class="image-preview">
          <% if current_user.avatar? %>
            <%= image_tag current_user.avatar.url, class: "max-w-xs max-h-48" %>
          <% end %>
        </div>
        <%= f.file_field :avatar, id: "avatar", class: "mt-1" %>
      </div>
  
      <div class="my-4">
        <%= f.submit "変更を保存", class: "btn btn-secondary px-4 py-2 rounded hover:bg-blue-600 text-white" %>
      </div>
<% end %>