<% if current_user && current_user.likes?(workspace) %>
  <%= button_to t('workspaces.show.favorite_remove_button'), workspace_favorite_path(workspace), method: :delete, remote: true, data: { confirm: t('workspaces.show.confirm_remove_favorite') }, class: "btn btn-sm btn-warning" %>
<% else %>
  <%= button_to t('workspaces.show.favorite_add_button'), workspace_favorites_path(workspace), method: :post, remote: true, class: "btn bg-natural btn-sm" %>
<% end %>
