<h1 class="text-center my-10">ワークスペース一覧</h1>

<div class="text-center my-4"> <!-- プルダウンメニューを中央揃えに配置 -->
  <div class="dropdown dropdown-right inline-block">
    <label tabindex="0" class="btn btn-sm m-1 bg-neutral">並び替え</label>
    <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52">
      <li><%= link_to '新着順', list_workspaces_path(latest: "true") %></li>
      <li><%= link_to '古い順', list_workspaces_path(old: "true") %></li>
    </ul>
  </div>
</div>

<div class="container-fluid text-center px-0"> <!-- 右側の余白を削除 -->
  <div class="row justify-content-center">
    <% @workspaces.each do |workspace| %>
      <div class="col-md-4 mb-4">
        <%= link_to workspace_path(workspace) do %>
          <div class="p-3 border border-secondary border-2 rounded-lg shadow mx-20">
            <h5 class="text-2xl font-semibold mb-2 text-center pb-1 border-bottom border-secondary"><%= workspace.title %></h5>
            <p class="text-gray-600 text-center pb-1 border-bottom border-secondary"><%= workspace.address %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>