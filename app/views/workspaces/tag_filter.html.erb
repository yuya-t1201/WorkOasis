<nav class="m-8">
  <ul class="list-none p-0">
    <li class="mb-4">
      <i class="fas fa-arrow-left text-black mr-2"></i>
      <%= link_to t('workspaces.show.back_to_map'), workspaces_path, class: "text-black hover:text-indigo-700" %>
    </li>
    <li class="mb-4">
      <i class="fas fa-arrow-left text-black mr-2"></i>
      <%= link_to t('workspaces.show.back_to_list'), list_workspaces_path, class: "text-black hover:text-indigo-700" %>
    </li>
  </ul>
</nav>

<div class="container mx-auto text-center -mt-5"> 
  <h2 class="text-2xl font-bold mb-4"><%= t('workspaces.tag_filter.result_title') %></h2>
  <p class="mb-2"><%= t('workspaces.tag_filter.result_count', count: @workspaces_count) %></p>
  <div class="flex flex-wrap justify-center mb-4">
    <p class="text-lg font-bold mb-2"><%= t('workspaces.tag_filter.search_tags') %></p>
    <% params[:workspace][:tag_ids].each do |tag_id| %>
      <% tag = Tag.find(tag_id) %>
      <div class="mr-2 mb-2">
        <span class="px-2 py-1 bg-sky-300 rounded-full text-sm font-medium text-gray-700"><%= tag.name %></span>
      </div>
    <% end %>
  </div>
  <div class="mb-4">
    <%= render 'workspaces_index', workspaces: @workspaces %>
  </div>
</div>